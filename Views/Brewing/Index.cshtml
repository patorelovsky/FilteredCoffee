@model IEnumerable<FilteredCoffee.Brewing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoffeeAmountGrams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrinderUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrindLevelInClicks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterTemperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrewingTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CoffeeAmountGrams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrinderUsed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrindLevelInClicks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterTemperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrewingTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
